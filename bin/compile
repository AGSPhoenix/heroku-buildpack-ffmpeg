#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

URL = ""

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="vendor"

cd $BUILD_DIR
git clone -n --depth 1 git@github.com:flect/heroku-binaries.git $VENDOR_DIR
cd $VENDOR_DIR
git checkout HEAD ffmpeg.tar.gz
tar zxvf ffmpeg.tar.gz
rm -rf .git
rm ffmpeg.tar.gz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="vendor/ffmpeg/bin:$PATH"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/ffmpeg/lib"' >> $PROFILE_PATH
